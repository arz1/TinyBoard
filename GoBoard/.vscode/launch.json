    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/flash.elf",
            "name": "Debug J-Link-SWEGGER",
            "device": "nRF52840_xxAA",
            "interface": "swd",
            "serverpath": "/usr/bin/JLinkGDBServerCLExe", 
            "serialNumber": null,
            "runToMain": true,
            "armToolchainPath": "${env:HOME}/Tools/gcc-arm-none-eabi-9-2019-q4-major/bin/",
            "svdFile": "${workspaceRoot}/nrf52.svd"
        }
    ]
}